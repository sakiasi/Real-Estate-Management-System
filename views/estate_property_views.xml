<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Estate Action -->
    <record id="estate_action" model="ir.actions.act_window">
        <field name="name">Estate Action</field>
        <field name="res_model">estate.model</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

    <!-- Property Type Action -->
    <record id="estate_Property_type_action" model="ir.actions.act_window">
        <field name="name">Estate Type</field>
        <field name="res_model">estate_property_type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!--Seller Action -->
     <record id="estate_seller_action" model="ir.actions.act_window">
        <field name="name">Estate Seller</field>
        <field name="res_model">estate_seller</field>
        <field name="view_mode">list,form</field>
     </record>

    <!-- seller form -->
     <record id="estate_seller_form" model="ir.ui.view">
        <field name="name">Estate Seller Form</field>
        <field name="model">estate_seller</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div>
                        <h1>
                            <field placeholder='Enter seller name' name="name" help="Enter Seller's name"></field>
                        </h1>
                    </div>
                    <div>
                        <group>
                            <group width='50'>
                                <field placeholder='Date of Birth' name="dob"></field>
                                <field placeholder='Address' name="address"></field>
                            </group>
                            <group width='50'>
                                <field placeholder='Contact' name="contact"></field>
                                <field placeholder='Email' name="email"></field>
                            </group>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
     </record>

    <!--Buyer Action-->
     <record id="estate_buyer_action" model="ir.actions.act_window">
        <field name="name">Estate Buyer</field>
        <field name="res_model">estate_buyer</field>
        <field name="view_mode">list,form</field>
     </record>

    <!--Buyer List -->
     <record id="estate_buyer_list" model="ir.ui.view">
        <field name="name">estate_list_view</field>
        <field name="model">estate_buyer</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="name" width="50"></field>
                <field name="dob" width="50"></field>
                <field name="address" width="50"></field>
                <field name="contact" width="50"></field>
                <field name="email" width="50"></field>
            </list>
        </field>
     </record>

     <!-- Property Type list-->
    <record id="estate_property_type_list_view" model="ir.ui.view">
        <field name="name">estate_property_type_list_view</field>
        <field name="model">estate_property_type</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="name" width="50"></field>
            </list>
        </field>
    </record>

    <!-- Estate List-->
    <record id="estate_list_view" model="ir.ui.view">
        <field name="name">estate_list_view</field>
        <field name="model">estate.model</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="name" width='50'></field>
                <field name="description" width='50'></field>
                <field name="postcode" width='50'></field>
                <field name="date_availability" width='50'></field>
                <field name="expected_price" width='50'></field>
                <field name="selling_price" width='50'></field>
                <field name="bedrooms" width='50'></field>
            </list>
        </field>
    </record>

    <!--Estate Form-->
    <record id="estate_form_view" model="ir.ui.view">
        <field name="name">estate_form_view</field>
        <field name="model">estate.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                                <div>
                                    <h1>
                                        <field name="name" class="mb16"/>
                                    </h1>
                                    <group width='50'>
                                        <group>
                                            <field width='50' placeholder='Enter Postcode' string='Postcode' name="postcode"></field>
                                            <field width='50' placeholder='Enter Date' string='Available From' name="date_availability"></field>
                                        </group>
                                        <group>
                                            <field width='50' string='Expected Price' name="expected_price"></field>
                                            <field width='50' string='Selling Price' name="selling_price"></field>
                                            <field placeholder='Property Type' name="property_type_id"></field>
                                        </group>
                                    </group>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page string='Description'>
                                <group>
                                <field placeholder='Enter description' string='Description' name="description"></field>
                                <field string='Bedrooms' name="bedrooms"></field>
                                <field name="living_area"></field>
                                <field name="facades"></field>
                                <field name="garage"></field>
                                <field name="garden"></field>
                                <field name="garden_area"></field>
                                <field name="garden_orientation"></field>
                                <field name="active"/>
                                <field name="state"></field>
                                <field name="total_area"></field>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids">
                                <list editable="bottom">
                                    <field name="buyer_id"/>
                                    <field name="price"/>
                                    <field name="status"/>
                                    <field name="date_deadline"/>
                                </list>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="buyer_id"/>
                                            <field name="price"/>
                                            <field name="status"/>
                                            <field name="validity"/>
                                            <field name="date_deadline"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <page string="Other info">
                            <group>
                                <field name="salesman"></field>
                                <field name="buyer"></field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search Estate -->
    <record id="estate_search" model="ir.ui.view">
        <field name="name">Estate Search</field>
        <field name="model">estate.model</field>
        <field name="arch" type="xml">
            <search string="Estate Search">
                <field name="name" string='Name'></field>
                <field name="postcode" string='Postcode'></field>
                <separator></separator>
                <filter string="garage" name="garage" domain="[('garage', '=', False)]"></filter>
            </search>
        </field>
    </record>

    <!-- Estate Offer form -->
     <record id="estate_offer" model="ir.ui.view">
        <field name="name">estate_offer_form</field>
        <field name="model">estate_offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"></field>
                        <field name="status"></field>
                        <field name="buyer_id"></field>
                        <field name="validity"></field>
                        <field name="date_deadline"></field>
                    </group>
                </sheet>
            </form>
        </field>
     </record>

     <!-- Estate offer list -->
      <record id="estate_offer_list" model="ir.ui.view">
        <field name="name">estate_offer_list</field>
        <field name="model">estate_offer</field>
        <field name="arch" type="xml">
            <list>
                <field width='50' name="buyer_id"></field>
                <field width='50' name="status"></field>
                <field width='50' name="price"></field>
            </list>
        </field>
      </record>

</odoo>